<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.5.0</version>  <!-- your Spring Boot version -->
        <relativePath/> <!-- look up from repository -->
    </parent>

    <groupId>com.pm</groupId>
    <artifactId>patient-management-parent</artifactId>
    <version>1.0.0</version>
    <packaging>pom</packaging>

    <modules>
        <module>analytics-service</module>
        <module>api-gateway</module>
        <module>billing-service</module>
        <module>patient-service</module>
        <module>auth-service</module>
    </modules>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
            <version>3.5.0</version>
        </dependency>
    </dependencies>


    <properties>
        <patient.service.port>4000</patient.service.port>
        <patient.service.name>patient-service</patient.service.name>


        <patient.service.db.port>5432</patient.service.db.port>
        <patient.service.db.name>mydatabase</patient.service.db.name>

        <java.version>21</java.version>

        <api.gateway.port>4004</api.gateway.port>
        <api.gateway.name>api-gateway</api.gateway.name>

        <image.tag>latest</image.tag>
    </properties>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                    <version>3.5.0</version> <!-- your Spring Boot version -->
                    <configuration>
                        <excludes>
                            <exclude>
                                <groupId>org.projectlombok</groupId>
                                <artifactId>lombok</artifactId>
                            </exclude>
                        </excludes>
                        <image>
                            <name>${project.artifactId}:latest</name>
                        </image>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>


    <!-- other shared configuration -->

</project>
